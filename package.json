{
  "name": "chatramue-vue",
  "version": "1.0.0",
  "description": "ChaTraMue Vietnam official tea shop website built with Vue.js 3",
  "private": true,
  "type": "module",
  "keywords": ["vue3", "vite", "pinia", "e-commerce", "tea-shop"],
  "author": "HikarixLS",
  "license": "MIT",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview --host",
    "api": "json-server --watch db.json --port 3001 --host 0.0.0.0",
    "dev:full": "concurrently \"npm run dev\" \"npm run api\"",
    "clean": "rimraf dist node_modules/.vite"
  },
  "dependencies": {
    "pinia": "^2.1.0",
    "vue": "^3.5.18",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.4",
    "concurrently": "^9.2.0",
    "json-server": "^1.0.0-beta.3",
    "vite": "^6.3.5"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
